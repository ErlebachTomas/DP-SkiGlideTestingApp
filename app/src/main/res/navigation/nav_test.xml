<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_test"
    app:startDestination="@id/measurementListFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="cz.erlebach.skitesting.fragments.recommendation.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="cz.erlebach.skitesting.fragments.recommendation.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/measurementListFragment"
        android:name="cz.erlebach.skitesting.fragments.measurement.MeasurementListFragment"
        android:label="fragment_measurement_list_layout"
        tools:layout="@layout/fragment_measurement_list_layout" >
        <action
            android:id="@+id/action_measurementListFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>